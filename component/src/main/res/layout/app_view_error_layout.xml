<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100pt"
        android:layout_gravity="center"
        tools:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_data_error_icon"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ProgressBar
            android:id="@+id/anim_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Style_Loading" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:paddingStart="100pt"
            android:paddingEnd="100pt"
            android:maxLines="2"
            android:gravity="center"
            android:text="@string/app_error_view_loading"
            android:textColor="#999999"
            android:textSize="30pt" />

    </LinearLayout>

</merge>