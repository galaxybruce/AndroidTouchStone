<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="40pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="100pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="36pt"
        android:textColor="@color/theme_text_color_1"
        tools:text="测试"
        />

    <EditText android:id="@+id/et_content"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/app_input_bg"
        android:layout_marginTop="20pt"
        android:layout_marginStart="40pt"
        android:layout_marginEnd="40pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:paddingTop="15pt"
        android:paddingBottom="15pt"
        android:gravity="start|center_vertical"
        android:textSize="36pt"
        android:textColor="@color/theme_text_color_1"
        tools:text="20"
        />

</androidx.constraintlayout.widget.ConstraintLayout>